{
  "appId": "com.sourceless.blockchain",
  "productName": "Sourceless Blockchain v0.13",
  "version": "0.13.0",
  "files": [
    "dist/**/*",
    "public/**/*"
  ],
  "directories": {
    "output": "release",
    "buildResources": "assets"
  },
  "mac": {
    "category": "public.app-category.finance",
    "target": [
      "dmg",
      "zip"
    ],
    "icon": "assets/icon.icns"
  },
  "win": {
    "target": [
      "nsis",
      "zip"
    ],
    "icon": "assets/icon.ico"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "icon": "assets/icon.png",
    "category": "Finance"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "build": {
    "asar": true,
    "extraResources": [
      "resources/**/*"
    ]
  }
}