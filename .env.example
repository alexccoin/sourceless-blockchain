# Environment Variables Template
# Copy this file to .env and update with your values

# Server Configuration
PORT=3002
NODE_ENV=production

# Security
ALLOWED_ORIGINS=*
RATE_LIMIT=1000

# Database
DATABASE_MODE=true
SKIP_HEAVY_HISTORY=true

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Network
NETWORK_NAME=Sourceless Mainnet
CHAIN_ID=1313

# PM2 Configuration (if using PM2)
PM2_INSTANCES=1
PM2_MAX_MEMORY_RESTART=1G
